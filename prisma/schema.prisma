generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users{
    id              Int         @id                     @default(autoincrement())
    createdAt       DateTime    @default(now())
    updatedAt       DateTime    @updatedAt

    name            String
    email           String      @unique
    password        String
    fidelityPts     Float       @default(0)
    accountType     Int         @default(1)

    address         String?
    phone           String?     @unique
    coordonate      String?
    area            String?
    idSociete       String?     @unique
}

model userHasRestaurant{
    id              Int         @id                     @default(autoincrement())
    createdAT       DateTime    @default(now())
    updatedAt       DateTime    @updatedAt

    users           Users       @relation(fields:[fk_user], references:[id])
    fk_user         Int
    idRestaurant    String
}