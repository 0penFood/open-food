// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users{
    id              Int         @id                     @default(autoincrement())
    createdAT       DateTime    @default(now())
    updatedAt       DateTime    @updatedAt

    firstName       String
    lastName        String
    email           String      @unique
    password        String
    fidelity_pts    Float

    address         String?
    phone           String?
    coordonate      String?
    area            String?
    id_societe      String?
    rankings        Ranking[]
}

model Ranking{
    id              Int         @id @default(autoincrement())
    stars           Float
    commentary      String
    users           Users        @relation(fields:[fk_user], references:[id])
    fk_user         Int
}